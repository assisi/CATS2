<?xml version="1.0"?>
<opencv_storage>
    <experiment>
        <name>TestExperiment</name>
        <!-- TODO : try to minimize the redundancy of the information on the quantity of agents. -->
        <agents>
            <numberOfAnimals>5</numberOfAnimals>
        </agents>
        <setupMapPath>setup/epfl-two-rooms.xml</setupMapPath>
    </experiment>
    <robots>
        <numberOfRobots>1</numberOfRobots>
        <controlFrequencyHz>10</controlFrequencyHz>
        <fishMotionPatternFrequencyDivider>5</fishMotionPatternFrequencyDivider>
        <pathPlanning>
            <gridSizeM>0.01</gridSizeM>
        </pathPlanning>
        <obstacleAvoidance>
            <potentialField>
                <influenceDistanceArenaM>0.10</influenceDistanceArenaM>
                <influenceStrengthArena>1000</influenceStrengthArena>
                <influenceDistanceRobotsM>0.05</influenceDistanceRobotsM>
                <influenceStrengthRobots>2000</influenceStrengthRobots>
                <influenceDistanceTargetM>0.05</influenceDistanceTargetM>
                <influenceStrengthTarget>2</influenceStrengthTarget>
                <maxForce>1000</maxForce>
                <maxAngleDeg>60</maxAngleDeg>
                <obstacleAvoidanceAreaDiameterM>0.1</obstacleAvoidanceAreaDiameterM>
            </potentialField>
        </obstacleAvoidance>
        <fishMotionPattern>
            <distanceCm>25</distanceCm>
            <speedCmSec>15</speedCmSec>
        </fishMotionPattern>
        <pid>
            <kp>1.10</kp>
            <ki>0.03</ki>
            <kd>0.00</kd>
        </pid>
        <defaultLinearSpeedCmSec>10</defaultLinearSpeedCmSec>
        <needOrientationToNavigate>0</needOrientationToNavigate>
        <fishBot_1>
            <id>H</id>
            <ledColor>
                <r>90</r>
                <g>150</g>
                <b>200</b>
            </ledColor>
            <!-- TODO : move this out into the experiment section. -->
            <controlAreasPath>control-maps/test-control-map.xml</controlAreasPath>
        </fishBot_1>
        <fishBot_2>
            <id>B</id>
            <ledColor>
                <r>255</r>
                <g>160</g>
                <b>200</b>
            </ledColor>
            <controlAreasPath>control-maps/test-control-map.xml</controlAreasPath>
        </fishBot_2>
        <fishBot_3>
            <id>C</id>
            <ledColor>
                <r>190</r>
                <g>255</g>
                <b>190</b>
            </ledColor>
            <controlAreasPath>control-maps/test-control-map.xml</controlAreasPath>
        </fishBot_3>
    </robots>
    <setups>
        <mainCamera>
            <!--
                TODO : consider adding here the camera type or id to compare with the
                value in the calibration file.
            -->
            <imageSize>
                <width>512</width>
                <height>512</height>
            </imageSize>
            <cameraCalibrationFile>camera-calibration/epfl-setup-180/cats2-epfl-main-camera-basler.xml</cameraCalibrationFile>
            <tracking>
                <trackingMethod>blobDetector</trackingMethod>
                <numberOfAgents>7</numberOfAgents>
                <blobDetector>
                    <minBlobSizePx>0</minBlobSizePx>
                    <qualityLevel>0.01</qualityLevel>
                    <minDistance>20.0</minDistance>
                    <blockSize>5</blockSize>
                    <useHarrisDetector>0</useHarrisDetector>
                    <k>0.04</k>
            </blobDetector>
            </tracking>
        </mainCamera>
        <cameraBelow>
            <imageSize>
                <width>640</width>
                <height>480</height>
            </imageSize>
            <cameraCalibrationFile>camera-calibration/epfl-setup-180/cats2-epfl-180-angle-below-camera.xml</cameraCalibrationFile>
            <tracking>
                <trackingMethod>fishBotLedsTracking</trackingMethod>
                <maskFile>bottom-camera-mask.png</maskFile>
                <fishBotLedsTracking>
                    <fishBot_H>
                        <threshold>30</threshold>
                    </fishBot_H>
                    <fishBot_B>
                        <threshold>40</threshold>
                    </fishBot_B>
                    <fishBot_C>
                        <threshold>40</threshold>
                    </fishBot_C>
                </fishBotLedsTracking>
            </tracking>
        </cameraBelow>
    </setups>
    <interSpecies>
        <publisherAddress>tcp://127.0.0.1:50001</publisherAddress>
    </interSpecies>
</opencv_storage>

