                <controlAreasPath>control-maps/paris-8-sectors-control-map-setup2.xml</controlAreasPath>
            </controlMap>
            <circularSetup>
                <controlAreasPath>control-maps/paris-8-sectors-control-map-setup2.xml</controlAreasPath>
                <targetPositionRadius>0.25</targetPositionRadius>
                <targetDeltaAngleDeg>18.</targetDeltaAngleDeg>
            </circularSetup>
        </controllers>
